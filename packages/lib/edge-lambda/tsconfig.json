{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2021",
    ],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "typeRoots": ["node_modules/@types", "./typings"],
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "incremental": true
  },
  "include": [
    "src/**/*",
  ],
}
